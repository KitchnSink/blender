

<% if flash[:notice] %>
  <div class="notice-wrapper row">
    <div class="columns notice">
      <div data-alert class="alert-box notice radius">
        <%= flash[:notice] %>
        <a href="#" class="close">&times;</a>
      </div>
    </div>
  </div>
<% end %>

