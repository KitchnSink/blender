<hr class="section-spacer">
<%= lesson_is_available lesson.id %>
<div class="lesson-item row <%= 'unavailable' unless lesson_is_available lesson.id %>">
  <div class="columns large-2">

    <% if lesson_is_available lesson.id %>
    <a href="<%= url_for lesson %>">
      <%= render 'lessons/lesson_image', lesson: lesson %>
    </a>
    <% else %>
      <%= render 'lessons/lesson_image', lesson: lesson %>
    <% end %>
  </div>

  <div class="columns large-10">
    <h4>
      <% if lesson_is_available lesson.id %>
        <%= link_to lesson.title, lesson %>
      <% else %>
        <%= lesson.title %>
      <% end %>
    </h4>
    <p>
      <%= lesson.body %>
    </p>
  </div>
</div>
