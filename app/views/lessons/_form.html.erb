<div class="row">
  <div class="columns large-10 large-centered">

    <%= form_for(@lesson) do |f| %>
      <div>
        <%= f.label :title %>
        <%= f.text_field :title, :autofocus => true %>
      </div>
      <div>
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>
      <div>
        <%= f.label :order %>
        <%= f.text_field :order %>
      </div>
      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

      <div><%= f.submit "Sign up", class: "button" %></div>
    <% end %>

  </div>
</div>
